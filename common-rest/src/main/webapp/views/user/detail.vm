#set($layout = '/layout/blank.vm')
<div class="profile-user-info">
	<div class="profile-info-row">
		<div class="profile-info-name">用戶名</div>
		<div class="profile-info-value">
			<span class="editable">$!user.userName</span>
		</div>
	</div>

	<div class="profile-info-row">
		<div class="profile-info-name">真实姓名</div>
		<div class="profile-info-value">
			<span class="editable">$!user.realName</span>
		</div>
	</div>

	<div class="profile-info-row">
		<div class="profile-info-name">手机号码</div>
		<div class="profile-info-value">
			<span class="editable">$!user.phone</span>
		</div>
	</div>
	<div class="profile-info-row">
		<div class="profile-info-name">邮箱</div>
		<div class="profile-info-value">
			<span class="editable">$!user.email</span>
		</div>
	</div>
</div>
