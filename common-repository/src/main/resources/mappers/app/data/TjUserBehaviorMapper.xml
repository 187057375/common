<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xxx.common.repository.dao.data.TjUserBehaviorDao" > 
	<resultMap id="TjUserBehaviorMap" type="TjUserBehavior">
	    <result property="id" column="id"/>
        <result property="mobile" column="mobile"/>
        <result property="userId" column="user_id"/>
        <result property="type" column="type"/>
        <result property="deviceNo" column="device_no"/>
        <result property="deviceType" column="device_type"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
    </resultMap>
   	
   	<!-- 所有查询字段 -->
   	<sql id="allSelectionColumn">
		id,
		mobile,
		user_id,
		type,
		device_no,
		device_type,
		status,
		create_time
	</sql>
   	
   	<!-- 根据ID查询实体数据 -->
    <select id="loadById" parameterType="int" resultMap="TjUserBehaviorMap">
        SELECT <include refid="allSelectionColumn"/> FROM tj_user_behavior WHERE id = #{value} LIMIT 1
    </select>

    <!-- 添加数据 -->
    <insert id="insert" parameterType="TjUserBehavior">
		<selectKey resultType="int" order="AFTER" keyProperty="id">
		SELECT LAST_INSERT_ID() AS id
		</selectKey>
        INSERT INTO tj_user_behavior (
		 mobile, 
		 user_id, 
		 type, 
		 device_no, 
		 device_type, 
		 status, 
		 create_time
		 )  VALUES (
		 #{mobile}, 
		 #{userId}, 
		 #{type}, 
		 #{deviceNo}, 
		 #{deviceType}, 
		 #{status}, 
		 #{createTime})
    </insert>
    
    <!-- 根据ID删除数据-->
    <delete id="deleteById" parameterType="int">
        DELETE FROM  tj_user_behavior WHERE id=#{value}
    </delete>
	
    <!-- 批量添加数据 -->
    <insert id="insertList" parameterType="java.util.List">
        INSERT INTO tj_user_behavior (
		 id, 
		 mobile, 
		 user_id, 
		 type, 
		 device_no, 
		 device_type, 
		 status, 
		 create_time
		 )  VALUES 
		 <foreach collection="list" item="item" index="index" separator=",">
		(
		 #{item.id}, 
		 #{item.mobile}, 
		 #{item.userId}, 
		 #{item.type}, 
		 #{item.deviceNo}, 
		 #{item.deviceType}, 
		 #{item.status}, 
		  #{item.createTime})
		 </foreach>		 
    </insert>
</mapper>  