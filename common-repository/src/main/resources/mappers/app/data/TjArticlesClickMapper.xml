<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xxx.common.repository.dao.data.TjArticlesClickDao" > 
	<resultMap id="TjArticlesClickMap" type="TjArticlesClick">
	    <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="articlesId" column="articles_id"/>
        <result property="articlesName" column="articles_name"/>
        <result property="deviceNo" column="device_no"/>
        <result property="deviceType" column="device_type"/>
        <result property="createTime" column="create_time"/>
    </resultMap>
   	
   	<!-- 所有查询字段 -->
   	<sql id="allSelectionColumn">
		id,
		user_id,
		articles_id,
		articles_name,
		device_no,
		device_type,
		create_time
	</sql>
   	
   	<!-- 根据ID查询实体数据 -->
    <select id="loadById" parameterType="int" resultMap="TjArticlesClickMap">
        SELECT <include refid="allSelectionColumn"/> FROM tj_articles_click WHERE id = #{value} LIMIT 1
    </select>

    <!-- 添加数据 -->
    <insert id="insert" parameterType="TjArticlesClick">
		<selectKey resultType="int" order="AFTER" keyProperty="id">
		SELECT LAST_INSERT_ID() AS id
		</selectKey>
        INSERT INTO tj_articles_click (
		 user_id, 
		 articles_id, 
		 articles_name, 
		 device_no, 
		 device_type, 
		 create_time
		 )  VALUES (
		 #{userId}, 
		 #{articlesId}, 
		 #{articlesName}, 
		 #{deviceNo}, 
		 #{deviceType}, 
		 #{createTime})
    </insert>
    
    <!-- 根据ID删除数据-->
    <delete id="deleteById" parameterType="int">
        DELETE FROM  tj_articles_click WHERE id=#{value}
    </delete>
	
    <!-- 批量添加数据 -->
    <insert id="insertList" parameterType="java.util.List">
        INSERT INTO tj_articles_click (
		 id, 
		 user_id, 
		 articles_id, 
		 articles_name, 
		 device_no, 
		 device_type, 
		 create_time
		 )  VALUES 
		 <foreach collection="list" item="item" index="index" separator=",">
		(
		 #{item.id}, 
		 #{item.userId}, 
		 #{item.articlesId}, 
		 #{item.articlesName}, 
		 #{item.deviceNo}, 
		 #{item.deviceType}, 
		  #{item.createTime})
		 </foreach>		 
    </insert>
</mapper>  