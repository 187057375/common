<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_0.xsd"
		 version="3.1">
	<display-name>common-web</display-name>

	<!-- 解决工程编码过滤器 -->
	<filter>
		<filter-name>setCharacterEncoding</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>setCharacterEncoding</filter-name>
		<url-pattern>*.html</url-pattern>
	</filter-mapping>

	<!-- Shiro Security filter -->
	<filter>
		<filter-name>shiroFilter</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>shiroFilter</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>

	<!-- 加载Spring容器配置 -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:/common-bean.xml</param-value>
	</context-param>

	<!-- 配置WebAppRootListener在web中通过System.getProperty("common.root")来动态获项目的运行路径 -->
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>common.root</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.util.WebAppRootListener</listener-class>
	</listener>

	<context-param>
		<param-name>defaultHtmlEscape</param-name>
		<param-value>false</param-value>
	</context-param>

	<!-- 配置Spring核心控制器DispatcherServlet -->
	<servlet>
		<servlet-name>common</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath*:/common-servlet.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<!-- 过滤以.html为结尾的url -->
	<servlet-mapping>
		<servlet-name>common</servlet-name>
		<url-pattern>*.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>common</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>common</servlet-name>
		<url-pattern>/login.html</url-pattern>
	</servlet-mapping>


	<!--<mime-mapping> <extension>.txt</extension> <mime-type>application/octet-stream</mime-type> 
		</mime-mapping> -->
	<!-- 设置404跳转页面 -->
	<error-page>
		<error-code>404</error-code>
		<location>/404.html</location>
	</error-page>

	<!-- 设置500跳转页面 -->
	<error-page>
		<error-code>500</error-code>
		<location>/404.html</location>
	</error-page>

	<!-- 设置首页 -->
	<welcome-file-list>
		<welcome-file>login.html</welcome-file>
	</welcome-file-list>
	
	<!-- shiro会话过期后跳转到登录页 -->
	<error-page>
	    <exception-type>org.apache.shiro.session.InvalidSessionException</exception-type>
	    <location>/login.html</location>
	</error-page>

	<session-config>
		<session-timeout>20</session-timeout>
	</session-config>

</web-app>
