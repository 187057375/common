<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.wsh.common.dao.msg.GroupDao" > 
	<resultMap id="GroupMap" type="GroupDO">
	    <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="coverUrl" column="cover_url"/>
        <result property="status" column="status"/>
        <result property="createUserId" column="create_user_id"/>
        <result property="gmtCreated" column="gmt_created"/>
        <result property="gmtModified" column="gmt_modified"/>
    </resultMap>
   	
   	<!-- 所有查询字段 -->
   	<sql id="allSelectionColumn">
		id,
		name,
		cover_url,
		status,
		create_user_id,
		gmt_created,
		gmt_modified
	</sql>
   	
   	<!-- 根据ID查询实体数据 -->
    <select id="loadById" parameterType="int" resultMap="GroupMap">
        SELECT <include refid="allSelectionColumn"/> FROM group WHERE id = #{value} LIMIT 1
    </select>

    <!-- 添加数据 -->
    <insert id="insert" parameterType="Group">
		<selectKey resultType="int" order="AFTER" keyProperty="id">
		SELECT LAST_INSERT_ID() AS id
		</selectKey>
        INSERT INTO group (
		 name, 
		 cover_url, 
		 status, 
		 create_user_id, 
		 gmt_created, 
		 gmt_modified
		 )  VALUES (
		 #{name}, 
		 #{coverUrl}, 
		 #{status}, 
		 #{createUserId}, 
		 #{gmtCreated}, 
		 #{gmtModified})
    </insert>
    
    <!-- 根据ID删除数据-->
    <delete id="deleteById" parameterType="int">
        DELETE FROM  group WHERE id=#{value}
    </delete>
	
    <!-- 批量添加数据 -->
    <insert id="insertList" parameterType="java.util.List">
        INSERT INTO group (
		 id, 
		 name, 
		 cover_url, 
		 status, 
		 create_user_id, 
		 gmt_created, 
		 gmt_modified
		 )  VALUES 
		 <foreach collection="list" item="item" index="index" separator=",">
		(
		 #{item.id}, 
		 #{item.name}, 
		 #{item.coverUrl}, 
		 #{item.status}, 
		 #{item.createUserId}, 
		 #{item.gmtCreated}, 
		  #{item.gmtModified})
		 </foreach>		 
    </insert>
</mapper>  