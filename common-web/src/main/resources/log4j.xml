<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- 每天产生一个日志文件 -->
	<appender name="file" class="org.apache.log4j.DailyRollingFileAppender">
		<!-- 文件的最大尺寸  -->
		<param name="MaxFileSize" value="10KB" />
		<param name="File" value="F://logs/common/web" />
		<param name="DatePattern" value="'-'yyyy-MM-dd-HH'.log'" />
		<!-- 最大记录文件数  -->
		<param name="MaxBackupIndex" value="200" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p [%t] %c{1}.%M(%L) | %m%n" />
		</layout>
		 <!--过滤器设置输出的级别-->
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="levelMin" value="info" />
			<param name="levelMax" value="error" />
			<param name="AcceptOnMatch" value="true" />
		</filter>
	</appender>
	
	<!-- 控制台输出日志 -->
	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p [%t] %c{1}.%M(%L) | %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="levelMin" value="info" />
			<param name="levelMax" value="error" />
			<param name="AcceptOnMatch" value="true" />
		</filter>
	</appender>

	<!-- additivity="false" -->
	<logger name="org.springframework" additivity="false">
		<level value="info" />
		<appender-ref ref="file" />
		<appender-ref ref="stdout" />
	</logger>

	<logger name="spring_velocity_log" additivity="false">
		<level value="info" />
		<appender-ref ref="file" />
		<appender-ref ref="stdout" />
	</logger>

	<logger name="org.apache" additivity="false">
		<level value="info" />
		<appender-ref ref="file" />
		<appender-ref ref="stdout" />
	</logger>

	<logger name="org.mybatis" additivity="false">
		<level value="warn" />
		<appender-ref ref="file" />
		<appender-ref ref="stdout" />
	</logger>

	<logger name="java.sql" additivity="false">
		<level value="info" />
		<appender-ref ref="file" />
		<appender-ref ref="stdout" />
	</logger>

	<logger name="com.opensymphony" additivity="false">
		<level value="info" />
		<appender-ref ref="file" />
		<appender-ref ref="stdout" />
	</logger>

	<logger name="SimpleMappingExceptionResolver" additivity="false">
		<level value="warn" />
		<appender-ref ref="file" />
		<appender-ref ref="stdout" />
	</logger>

	<!-- log4jdbc -->
	<logger name="jdbc.sqlonly" additivity="false">
		<level value="warn" />
		<appender-ref ref="file" />
		<appender-ref ref="stdout" />
	</logger>

	<!-- log SQL with timing information, post execution -->
	<logger name="jdbc.sqltiming" additivity="false">
		<level value="info" />
		<appender-ref ref="file" />
		<appender-ref ref="stdout" />
	</logger>

	<!-- log all jdbc calls except ResultSet calls -->
	<logger name="jdbc.audit" additivity="false">
		<level value="warn" />
		<appender-ref ref="file" />
		<appender-ref ref="stdout" />
	</logger>

	<!-- log the jdbc ResultSet calls -->
	<logger name="jdbc.resultset" additivity="false">
		<level value="warn" />
		<appender-ref ref="file" />
		<appender-ref ref="stdout" />
	</logger>

	<!-- log connection open/close events and dump of all open connection numbers -->
	<logger name="jdbc.connection" additivity="false">
		<level value="warn" />
		<appender-ref ref="file" />
		<appender-ref ref="stdout" />
	</logger>

	<logger name="log4jdbc.debug" additivity="false">
		<level value="warn" />
		<appender-ref ref="file" />
		<appender-ref ref="stdout" />
	</logger>

	<logger name="jdbc.resultsettable" additivity="false">
		<level value="warn" />
		<appender-ref ref="file" />
		<appender-ref ref="stdout" />
	</logger>

	<!-- the root category -->
	<root>
		<level value="info" />
		<appender-ref ref="file" />
		<appender-ref ref="stdout" />
	</root>
</log4j:configuration>
